<p id="notice"><%= notice %></p>

<h1>Listing Images</h1>


    <div class="row">
      <div class="col-lg-2">Url</div>
      <div class="col-lg-4">Camp</div>
      <div class="col-lg-3"></div>
    </div>

    <% @images.each do |image| %>
      <div class="row images" style="padding-bottom: 5px">
        <div class="col-lg-2"><%= image_tag image.image_url(:thumb) %></div>
        <div class="col-lg-4" style="padding-top: 15px"><%= Camp.find(image.camp_id).name %></div>
        <div class="col-lg-1"><%= link_to 'Show', image %></div>
        <div class="col-lg-1"><%= link_to 'Edit', edit_image_path(image) %></div>
        <div class="col-lg-1"><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
    <% end %>


